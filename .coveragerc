[paths]
source = src

[run]
branch = True
source =
    src
    tests
parallel = true
omit =
    conftest.py

[report]
show_missing = true
precision = 2
omit = *migrations* tests/conftest.py
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug
